@model WebApp.Models.Registration

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Delete</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            UserId
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>

        <dt class="col-sm-2">
            FirstName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserFirstName)
        </dd>

        <dt class="col-sm-2">
            LatName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserLastName)
        </dd>

        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>

        <dt class="col-sm-2">
            MobileNumber
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserPhone)
        </dd>
    </dl>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.UserId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
